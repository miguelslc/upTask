doctype html
html(lang="en")
    head
        include partials/headers
    body 
        header.barra 
            h1 Uptask - Administrador de Proyecto 
            a(href="/logout") Cerrar Sesion 

        main.contenedor 
            aside.contenedor-proyectos
                .panel.crear-proyecto
                    a(href="/nuevo_proyecto" class="boton") Nuevo Proyecto
                        span +
                .panel.lista-proyectos
                    h2 Proyectos 
                    ul#proyectos.proyectos 
                        if(proyectos.length)
                            each proyecto in proyectos 
                                li 
                                    a(href=`/proyectos/${proyecto.url}`)= proyecto.nombre 

            block contenido 
            //pre= varDump(proyectos)
        script(src="/dist/bundle.js") 