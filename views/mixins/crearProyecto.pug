mixin crearProyecto(proyecto = {})

    form.agregar-proyecto(action=`/nuevo_proyecto/${proyecto.id || ''}` method="POST")
        .campo 
            label(for="nombre") Nombre 
            input(type="text" value=proyecto.nombre id="nombre" name="nombre" placeholder="Nombre Proyecto")
        .campo.enviar 
            input(type="submit", value=`${proyecto.nombre ? 'Guardar' : 'Agregar'}` class="boton")